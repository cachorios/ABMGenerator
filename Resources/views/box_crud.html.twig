<div class="widget">
    <div class="widget-header  with-footer">
        <span class="widget-caption">{{ titulo | raw }}</span>

        {% block rb_widget_header_buttons %}
            <div class="widget-buttons">
                <a data-toggle="maximize" href="#">
                    <i class="fa fa-expand"></i>
                </a>
                <a data-toggle="collapse" href="#">
                    <i class="fa fa-minus"></i>
                </a>
                {#<a data-toggle="dispose" href="#">#}
                    {#<i class="fa fa-times"></i>#}
                {#</a>#}
            </div>
        {% endblock %}

    </div>
    <div class="widget-body" style="height: auto;">

        <div class="flip-scroll">
            {% block rb_contenido %}Contenido{% endblock %}

        </div>
    </div>
    <div class="widget-header  with-footer">
        <div class="widget-buttons">
            {% block rb_widget_footer_buttons %}{% endblock %}
        </div>
    </div>
</div>

